\hfill
\begin{tabular}{r@{~}l@{}}
	{\@AuthorOne} & ({\@NetIDOne})
	\\
	\ifnum\theAuthors>1\quad{\@AuthorTwo}\fi &
	\ifnum\theAuthors>1({\@NetIDTwo})\fi
	\\
	\ifnum\theAuthors>2\quad{\@AuthorThree}\fi &
	\ifnum\theAuthors>2({\@NetIDThree})\fi
\end{tabular}
}}
\end{center}
}

